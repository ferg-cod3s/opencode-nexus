---
import Layout from '../layouts/Layout.astro';
---

<Layout title="OpenCode Nexus - Connect to Server">
  <main class="connect-container">
    <div class="connect-content">
      <header class="connect-header">
        <h1 class="connect-title">
          <span class="logo-icon" aria-hidden="true">üîó</span>
          Connect to OpenCode Server
        </h1>
        <p class="connect-subtitle">
          Enter your OpenCode server URL to start chatting with AI
        </p>
      </header>

      <form class="connect-form" id="connect-form" data-testid="connect-form" novalidate>
        <!-- Connection Method Selector -->
        <div class="form-group">
          <label for="connection-method" class="form-label">
            Connection Method
          </label>
          <select
            id="connection-method"
            name="connection-method"
            class="form-select"
            data-testid="connection-method-select"
            aria-label="Select connection method"
          >
            <option value="localhost">üè† Localhost (Development)</option>
            <option value="tunnel">‚òÅÔ∏è Cloudflare Tunnel</option>
            <option value="proxy">üîí Reverse Proxy</option>
          </select>
          <p class="help-text">
            Choose how your OpenCode server is exposed
          </p>
        </div>

        <!-- Server URL Input -->
        <div class="form-group">
          <label for="server-url" class="form-label">
            Server URL
            <span class="required-indicator" aria-label="required">*</span>
          </label>
          <input
            type="url"
            id="server-url"
            name="server-url"
            class="form-input"
            data-testid="server-url-input"
            placeholder="http://localhost:4096"
            required
            autocomplete="url"
            aria-label="Server URL"
            aria-describedby="server-url-error server-url-help"
            aria-invalid="false"
          >
          <p id="server-url-help" class="help-text">
            Enter the URL where your OpenCode server is running
          </p>
          <div id="server-url-error" class="error-message" data-testid="server-url-error" role="alert" aria-live="polite">
            <!-- Error message will be populated by JavaScript -->
          </div>
        </div>

        <!-- API Key Input (Optional for localhost/tunnel, Required for proxy) -->
        <div class="form-group" id="api-key-group">
          <label for="api-key" class="form-label">
            API Key
            <span class="optional-indicator" id="api-key-optional">(optional)</span>
            <span class="required-indicator" id="api-key-required" style="display: none;" aria-label="required">*</span>
          </label>
          <div class="password-input-container">
            <input
              type="password"
              id="api-key"
              name="api-key"
              class="form-input"
              data-testid="api-key-input"
              placeholder="Enter API key if required"
              autocomplete="off"
              aria-label="API key"
              aria-describedby="api-key-error api-key-help"
              aria-invalid="false"
            >
            <button
              type="button"
              class="password-toggle"
              id="api-key-toggle"
              aria-label="Show API key"
              tabindex="-1"
            >
              <span class="toggle-icon" aria-hidden="true">üëÅÔ∏è</span>
            </button>
          </div>
          <p id="api-key-help" class="help-text">
            Required for reverse proxy connections (HMAC signing)
          </p>
          <div id="api-key-error" class="error-message" data-testid="api-key-error" role="alert" aria-live="polite">
            <!-- Error message will be populated by JavaScript -->
          </div>
        </div>

        <!-- Connection Name (Optional) -->
        <div class="form-group">
          <label for="connection-name" class="form-label">
            Connection Name
            <span class="optional-indicator">(optional)</span>
          </label>
          <input
            type="text"
            id="connection-name"
            name="connection-name"
            class="form-input"
            data-testid="connection-name-input"
            placeholder="My OpenCode Server"
            autocomplete="off"
            aria-label="Connection name"
            aria-describedby="connection-name-help"
          >
          <p id="connection-name-help" class="help-text">
            Give this connection a friendly name for easy identification
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="form-actions">
          <button
            type="button"
            class="btn-secondary btn-test-connection"
            id="test-connection-button"
            data-testid="test-connection-button"
          >
            <span class="button-text">Test Connection</span>
            <span class="loading-spinner" aria-hidden="true"></span>
          </button>

          <button
            type="submit"
            class="btn-primary btn-connect"
            id="connect-button"
            data-testid="connect-button"
            aria-describedby="connect-help"
          >
            <span class="button-text">Connect</span>
            <span class="loading-spinner" aria-hidden="true"></span>
          </button>

          <p id="connect-help" class="help-text">
            Test your connection first, then click Connect to start chatting
          </p>

          <div id="connect-error" class="error-message" data-testid="connect-error" role="alert" aria-live="polite" style="display: none;">
            <!-- Connection error message will be populated by JavaScript -->
          </div>
        </div>

        <!-- Connection Guide -->
        <div class="form-footer">
          <details class="help-section">
            <summary class="help-toggle">
              <span class="help-icon" aria-hidden="true">‚ùì</span>
              Connection Setup Guide
            </summary>
            <div class="help-content">
              <h3>How to Connect</h3>

              <div class="guide-section">
                <h4>üè† Localhost (Same Machine)</h4>
                <ul>
                  <li><strong>URL:</strong> <code>http://localhost:4096</code></li>
                  <li><strong>API Key:</strong> Not required</li>
                  <li><strong>Setup:</strong> <code>opencode serve</code> (default port 4096)</li>
                </ul>
              </div>

              <div class="guide-section">
                <h4>‚òÅÔ∏è Cloudflare Tunnel</h4>
                <ul>
                  <li><strong>URL:</strong> <code>https://your-tunnel.trycloudflare.com</code></li>
                  <li><strong>API Key:</strong> Not required (Cloudflare handles auth)</li>
                  <li><strong>Setup:</strong> <code>cloudflared tunnel --url http://localhost:4096</code></li>
                </ul>
              </div>

              <div class="guide-section">
                <h4>üîí Reverse Proxy</h4>
                <ul>
                  <li><strong>URL:</strong> <code>https://opencode.yourdomain.com</code></li>
                  <li><strong>API Key:</strong> Required (for HMAC signing)</li>
                  <li><strong>Setup:</strong> Configure nginx/Caddy with SSL + API key validation</li>
                </ul>
              </div>

              <p>
                <strong>Need more help?</strong>
                <a href="https://docs.opencode.ai/client/connection-setup" target="_blank" rel="noopener">
                  Read the full connection setup guide
                </a>
              </p>
            </div>
          </details>
        </div>
      </form>

      <!-- Status Indicator -->
      <div class="connection-status" role="region" aria-labelledby="connection-status-title">
        <h2 id="connection-status-title" class="sr-only">Connection Status</h2>
        <div class="status-item">
          <span class="status-icon" id="status-icon" aria-hidden="true">‚è≥</span>
          <span class="status-text" id="status-text">Ready to connect</span>
        </div>
      </div>

      <!-- Global Alert -->
      <div
        id="global-alert"
        class="global-alert"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none;"
      >
        <div class="alert-content">
          <span class="alert-icon" aria-hidden="true"></span>
          <span class="alert-message"></span>
          <button class="alert-dismiss" aria-label="Dismiss alert">
            <span aria-hidden="true">‚úï</span>
          </button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* OpenCode-inspired Connect Page Styling */
  .connect-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--background-base);
    padding: var(--spacing-4);
  }

  .connect-content {
    background: var(--background-surface);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    max-width: 560px;
    width: 100%;
    padding: var(--spacing-8);
    border: 1px solid var(--border-weak);
  }

  .connect-header {
    text-align: center;
    margin-bottom: var(--spacing-8);
  }

  .connect-title {
    font-size: 1.75rem;
    color: var(--text-strong);
    margin-bottom: var(--spacing-2);
    font-weight: var(--font-weight-semibold);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-3);
  }

  .logo-icon {
    font-size: 2rem;
  }

  .connect-subtitle {
    color: var(--text-base);
    font-size: var(--font-size-base);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }

  .connect-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-weight: var(--font-weight-medium);
    color: var(--text-strong);
    margin-bottom: var(--spacing-2);
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    font-size: var(--font-size-small);
  }

  .required-indicator {
    color: var(--accent-error);
    font-weight: bold;
  }

  .optional-indicator {
    color: var(--text-muted);
    font-weight: normal;
    font-size: var(--font-size-small);
  }

  .form-input, .form-select {
    padding: var(--spacing-3) var(--spacing-4);
    border: 1px solid var(--input-border);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    transition: all 0.15s ease;
    background: var(--input-background);
    color: var(--text-strong);
  }

  .form-select {
    cursor: pointer;
  }

  .form-input:focus, .form-select:focus {
    outline: none;
    border-color: var(--input-border-focus);
    box-shadow: 0 0 0 3px rgba(3, 76, 255, 0.1);
  }

  .form-input.error {
    border-color: var(--accent-error);
  }

  .password-input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .password-input-container .form-input {
    padding-right: var(--spacing-10);
  }

  .password-toggle {
    position: absolute;
    right: var(--spacing-3);
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-1);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
    transition: color 0.15s ease;
  }

  .password-toggle:hover {
    color: var(--text-strong);
  }

  .password-toggle:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
  }

  .help-text {
    font-size: var(--font-size-small);
    color: var(--text-muted);
    margin-top: var(--spacing-2);
    margin-bottom: 0;
    line-height: var(--line-height-base);
  }

  .help-text code {
    background: var(--background-weak);
    padding: 2px var(--spacing-2);
    border-radius: var(--radius-sm);
    font-family: var(--font-family-mono);
    font-size: 0.85em;
  }

  .error-message {
    font-size: var(--font-size-small);
    color: var(--accent-error);
    margin-top: var(--spacing-2);
    min-height: 1.2em;
    font-weight: var(--font-weight-medium);
  }

  .error-message:empty {
    display: none;
  }

  .form-actions {
    margin-top: var(--spacing-4);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
  }

  .btn-connect, .btn-test-connection {
    width: 100%;
    padding: var(--spacing-4) var(--spacing-6);
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    min-height: 48px;
  }

  .btn-connect {
    background: var(--button-primary-bg);
    color: var(--button-primary-text);
  }

  .btn-connect:hover:not(:disabled) {
    filter: brightness(1.1);
  }

  .btn-test-connection {
    background: var(--button-secondary-bg);
    color: var(--text-strong);
    border: 1px solid var(--border-base);
  }

  .btn-test-connection:hover:not(:disabled) {
    background: var(--button-ghost-hover);
  }

  .btn-connect:disabled, .btn-test-connection:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn-connect:focus-visible, .btn-test-connection:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
  }

  .loading-spinner {
    width: 1rem;
    height: 1rem;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    display: none;
  }

  .btn-connect.loading .loading-spinner,
  .btn-test-connection.loading .loading-spinner {
    display: block;
  }

  .btn-connect.loading .button-text,
  .btn-test-connection.loading .button-text {
    opacity: 0.7;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .form-footer {
    margin-top: var(--spacing-8);
    padding-top: var(--spacing-6);
    border-top: 1px solid var(--border-weak);
  }

  .help-section {
    background: var(--background-weak);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .help-toggle {
    padding: var(--spacing-4);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    color: var(--text-strong);
    font-weight: var(--font-weight-medium);
    transition: background-color 0.15s ease;
    list-style: none;
  }

  .help-toggle:hover {
    background: var(--button-ghost-hover);
  }

  .help-toggle::marker {
    display: none;
  }

  .help-content {
    padding: 0 var(--spacing-4) var(--spacing-4) var(--spacing-4);
    color: var(--text-base);
  }

  .help-content h3 {
    color: var(--text-strong);
    margin-bottom: var(--spacing-4);
    font-size: var(--font-size-base);
  }

  .guide-section {
    margin-bottom: var(--spacing-6);
  }

  .guide-section h4 {
    color: var(--text-strong);
    margin-bottom: var(--spacing-2);
    font-size: var(--font-size-small);
  }

  .guide-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .guide-section li {
    padding: var(--spacing-1) 0;
    line-height: var(--line-height-relaxed);
    font-size: var(--font-size-small);
  }

  .help-content a {
    color: var(--accent-primary);
    text-decoration: none;
    font-weight: var(--font-weight-medium);
  }

  .help-content a:hover {
    text-decoration: underline;
  }

  .connection-status {
    margin-top: var(--spacing-8);
    padding: var(--spacing-4);
    background: var(--background-weak);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-weak);
  }

  .status-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    font-size: var(--font-size-small);
    color: var(--text-base);
  }

  .status-icon {
    font-size: var(--font-size-base);
  }

  .global-alert {
    position: fixed;
    top: var(--spacing-4);
    right: var(--spacing-4);
    max-width: 400px;
    z-index: 1000;
    animation: slideIn 0.3s ease;
  }

  .alert-content {
    background: var(--background-surface);
    border-radius: var(--radius-lg);
    padding: var(--spacing-4);
    box-shadow: var(--shadow-lg);
    border-left: 4px solid var(--accent-primary);
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-3);
  }

  .global-alert.error .alert-content {
    border-left-color: var(--accent-error);
  }

  .global-alert.success .alert-content {
    border-left-color: var(--accent-success);
  }

  .alert-dismiss {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-1);
    color: var(--text-muted);
    border-radius: var(--radius-sm);
    transition: background-color 0.15s ease;
  }

  .alert-dismiss:hover {
    background: var(--button-ghost-hover);
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Responsive design */
  @media (max-width: 568px) {
    .connect-content {
      padding: var(--spacing-6);
    }

    .connect-title {
      font-size: 1.5rem;
    }

    .form-actions {
      gap: var(--spacing-2);
    }
  }

  /* Accessibility */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .btn-connect,
    .btn-test-connection,
    .loading-spinner,
    .global-alert {
      animation: none;
      transition: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .connect-content {
      border: 2px solid currentColor;
    }

    .form-input, .form-select {
      border: 2px solid currentColor;
    }

    .btn-connect {
      background: currentColor;
    }
  }
</style>

<script>
  import { invoke, checkEnvironment } from '../utils/tauri-api';

  class ConnectionManager {
    private form: HTMLFormElement;
    private methodSelect: HTMLSelectElement;
    private serverUrlInput: HTMLInputElement;
    private apiKeyInput: HTMLInputElement;
    private connectionNameInput: HTMLInputElement;
    private testButton: HTMLButtonElement;
    private connectButton: HTMLButtonElement;
    private apiKeyToggle: HTMLButtonElement;
    private isApiKeyVisible: boolean = false;

    constructor() {
      this.form = document.getElementById('connect-form') as HTMLFormElement;
      this.methodSelect = document.getElementById('connection-method') as HTMLSelectElement;
      this.serverUrlInput = document.getElementById('server-url') as HTMLInputElement;
      this.apiKeyInput = document.getElementById('api-key') as HTMLInputElement;
      this.connectionNameInput = document.getElementById('connection-name') as HTMLInputElement;
      this.testButton = document.getElementById('test-connection-button') as HTMLButtonElement;
      this.connectButton = document.getElementById('connect-button') as HTMLButtonElement;
      this.apiKeyToggle = document.getElementById('api-key-toggle') as HTMLButtonElement;

      this.init();
    }

    private async init() {
      this.bindEvents();
      this.updatePlaceholders();
      await this.checkExistingConnection();
      this.focusServerUrl();
    }

    private async checkExistingConnection() {
      try {
        const status = await invoke('get_connection_status');
        if (status === 'Connected') {
          // Get current connection details
          const connection = await invoke('get_current_connection');
          if (connection) {
            this.showConnectedState(connection);
            return;
          }
        }
      } catch (error) {
        // No existing connection or error checking - continue with normal flow
        console.log('No existing connection found:', error);
      }
    }

    private showConnectedState(connection: any) {
      // Update UI to show connected state
      const statusElement = document.getElementById('connection-status');
      if (statusElement) {
        statusElement.textContent = `Connected to ${connection.name || connection.hostname}`;
        statusElement.className = 'status-connected';
      }

      // Disable form inputs
      this.serverUrlInput.disabled = true;
      this.apiKeyInput.disabled = true;
      this.connectionNameInput.disabled = true;
      this.methodSelect.disabled = true;

      // Update buttons
      this.connectButton.textContent = 'Disconnect';
      this.connectButton.onclick = this.handleDisconnect.bind(this);
      this.testButton.disabled = true;

      // Show disconnect option
      const disconnectButton = document.createElement('button');
      disconnectButton.textContent = 'Disconnect';
      disconnectButton.className = 'disconnect-button';
      disconnectButton.onclick = this.handleDisconnect.bind(this);

      const buttonContainer = document.querySelector('.button-container');
      if (buttonContainer) {
        buttonContainer.appendChild(disconnectButton);
      }
    }

    private async handleDisconnect() {
      try {
        await invoke('disconnect_from_server');
        // Reload page to reset UI
        window.location.reload();
      } catch (error) {
        console.error('Failed to disconnect:', error);
        alert('Failed to disconnect: ' + error);
      }
    }

    private bindEvents() {
      this.form.addEventListener('submit', this.handleConnect.bind(this));
      this.testButton.addEventListener('click', this.handleTestConnection.bind(this));
      this.methodSelect.addEventListener('change', this.handleMethodChange.bind(this));
      this.apiKeyToggle.addEventListener('click', this.toggleApiKeyVisibility.bind(this));

      // Real-time validation
      this.serverUrlInput.addEventListener('input', () => this.validateField('server-url'));
      this.apiKeyInput.addEventListener('input', () => this.validateField('api-key'));

      // Clear errors on focus
      this.serverUrlInput.addEventListener('focus', () => this.clearFieldError('server-url'));
      this.apiKeyInput.addEventListener('focus', () => this.clearFieldError('api-key'));

      // Global alert dismiss
      document.addEventListener('click', (e) => {
        if (e.target && (e.target as HTMLElement).closest('.alert-dismiss')) {
          this.dismissAlert();
        }
      });
    }

    private handleMethodChange() {
      this.updatePlaceholders();
      this.updateApiKeyRequirement();
      this.validateForm();
    }

    private updatePlaceholders() {
      const method = this.methodSelect.value;

      switch (method) {
        case 'localhost':
          this.serverUrlInput.placeholder = 'http://localhost:4096';
          this.apiKeyInput.placeholder = 'Not required for localhost';
          break;
        case 'tunnel':
          this.serverUrlInput.placeholder = 'https://your-tunnel.trycloudflare.com';
          this.apiKeyInput.placeholder = 'Not required (Cloudflare handles auth)';
          break;
        case 'proxy':
          this.serverUrlInput.placeholder = 'https://opencode.yourdomain.com';
          this.apiKeyInput.placeholder = 'Enter your API key (required)';
          break;
      }
    }

    private updateApiKeyRequirement() {
      const method = this.methodSelect.value;
      const optionalIndicator = document.getElementById('api-key-optional');
      const requiredIndicator = document.getElementById('api-key-required');

      if (method === 'proxy') {
        optionalIndicator!.style.display = 'none';
        requiredIndicator!.style.display = 'inline';
        this.apiKeyInput.required = true;
      } else {
        optionalIndicator!.style.display = 'inline';
        requiredIndicator!.style.display = 'none';
        this.apiKeyInput.required = false;
      }
    }

    private async handleTestConnection(event: Event) {
      event.preventDefault();

      if (!this.validateForm()) {
        return;
      }

      this.setLoading(this.testButton, true);
      this.updateStatus('‚è≥', 'Testing connection...');

      try {
        const serverUrl = this.serverUrlInput.value.trim();
        const apiKey = this.apiKeyInput.value.trim() || undefined;

        const result = await invoke('test_server_connection', {
          serverUrl,
          apiKey
        });

        if (result) {
          this.updateStatus('‚úÖ', 'Connection successful!');
          this.showAlert('Connection test successful! Server is reachable.', 'success', '‚úÖ');
        } else {
          throw new Error('Connection test failed');
        }
      } catch (error) {
        console.error('Connection test error:', error);
        this.updateStatus('‚ùå', 'Connection failed');
        this.showAlert(
          `Connection test failed: ${error instanceof Error ? error.message : 'Server unreachable'}`,
          'error',
          '‚ùå'
        );
      } finally {
        this.setLoading(this.testButton, false);
      }
    }

    private async handleConnect(event: Event) {
      event.preventDefault();

      if (!this.validateForm()) {
        return;
      }

      this.setLoading(this.connectButton, true);
      this.updateStatus('‚è≥', 'Connecting to server...');

      try {
        const serverUrl = this.serverUrlInput.value.trim();
        const apiKey = this.apiKeyInput.value.trim() || undefined;
        const method = this.methodSelect.value as 'localhost' | 'tunnel' | 'proxy';
        const name = this.connectionNameInput.value.trim() || this.getDefaultConnectionName(method, serverUrl);

        const connectionId = await invoke('connect_to_server', {
          serverUrl,
          apiKey,
          method,
          name
        });

        if (connectionId) {
          this.updateStatus('‚úÖ', 'Connected successfully!');
          this.showAlert('Connected to OpenCode server! Redirecting to chat...', 'success', '‚úÖ');

          // Store connection info
          sessionStorage.setItem('connected', 'true');
          sessionStorage.setItem('connectionId', connectionId as string);
          sessionStorage.setItem('serverUrl', serverUrl);

          // Redirect to chat
          setTimeout(() => {
            window.location.href = '/chat';
          }, 1500);
        } else {
          throw new Error('Connection failed');
        }
      } catch (error) {
        console.error('Connection error:', error);
        this.updateStatus('‚ùå', 'Connection failed');
        this.showAlert(
          `Failed to connect: ${error instanceof Error ? error.message : 'Server unreachable'}`,
          'error',
          '‚ùå'
        );
        this.setFieldError('server-url', 'Could not connect to server');
      } finally {
        this.setLoading(this.connectButton, false);
      }
    }

    private getDefaultConnectionName(method: string, url: string): string {
      switch (method) {
        case 'localhost':
          return 'Local Development';
        case 'tunnel':
          return 'Cloudflare Tunnel';
        case 'proxy':
          try {
            const hostname = new URL(url).hostname;
            return hostname;
          } catch {
            return 'Remote Server';
          }
        default:
          return 'OpenCode Server';
      }
    }

    private validateForm(): boolean {
      let isValid = true;

      if (!this.validateField('server-url')) {
        isValid = false;
      }

      if (this.methodSelect.value === 'proxy' && !this.validateField('api-key')) {
        isValid = false;
      }

      return isValid;
    }

    private validateField(fieldName: 'server-url' | 'api-key'): boolean {
      const field = fieldName === 'server-url' ? this.serverUrlInput : this.apiKeyInput;
      const value = field.value.trim();

      this.clearFieldError(fieldName);

      if (fieldName === 'server-url') {
        if (!value) {
          this.setFieldError('server-url', 'Server URL is required');
          return false;
        }

        try {
          const url = new URL(value);
          const method = this.methodSelect.value;

          // Validate protocol based on connection method
          if (method === 'localhost') {
            if (url.protocol !== 'http:' && url.protocol !== 'https:') {
              this.setFieldError('server-url', 'Localhost URL must use http:// or https://');
              return false;
            }
          } else {
            // Tunnel and proxy must use HTTPS
            if (url.protocol !== 'https:') {
              this.setFieldError('server-url', 'Remote connections require HTTPS');
              return false;
            }
          }
        } catch {
          this.setFieldError('server-url', 'Please enter a valid URL');
          return false;
        }
      }

      if (fieldName === 'api-key' && this.methodSelect.value === 'proxy') {
        if (!value) {
          this.setFieldError('api-key', 'API key is required for reverse proxy connections');
          return false;
        }

        if (value.length < 16) {
          this.setFieldError('api-key', 'API key seems too short (minimum 16 characters)');
          return false;
        }
      }

      return true;
    }

    private setFieldError(fieldName: 'server-url' | 'api-key', message: string) {
      const field = fieldName === 'server-url' ? this.serverUrlInput : this.apiKeyInput;
      const errorElement = document.getElementById(`${fieldName}-error`);

      field.setAttribute('aria-invalid', 'true');
      field.classList.add('error');

      if (errorElement) {
        errorElement.textContent = message;
      }
    }

    private clearFieldError(fieldName: 'server-url' | 'api-key') {
      const field = fieldName === 'server-url' ? this.serverUrlInput : this.apiKeyInput;
      const errorElement = document.getElementById(`${fieldName}-error`);

      field.setAttribute('aria-invalid', 'false');
      field.classList.remove('error');

      if (errorElement) {
        errorElement.textContent = '';
      }
    }

    private toggleApiKeyVisibility() {
      this.isApiKeyVisible = !this.isApiKeyVisible;

      this.apiKeyInput.type = this.isApiKeyVisible ? 'text' : 'password';
      this.apiKeyToggle.setAttribute('aria-label', this.isApiKeyVisible ? 'Hide API key' : 'Show API key');

      const toggleIcon = this.apiKeyToggle.querySelector('.toggle-icon');
      if (toggleIcon) {
        toggleIcon.textContent = this.isApiKeyVisible ? 'üôà' : 'üëÅÔ∏è';
      }
    }

    private setLoading(button: HTMLButtonElement, loading: boolean) {
      button.disabled = loading;
      button.classList.toggle('loading', loading);

      if (loading) {
        button.setAttribute('aria-busy', 'true');
      } else {
        button.removeAttribute('aria-busy');
      }
    }

    private showAlert(message: string, type: 'success' | 'error' | 'warning' | 'info' = 'info', icon: string = '‚ÑπÔ∏è') {
      const alertElement = document.getElementById('global-alert');
      const messageElement = alertElement?.querySelector('.alert-message');
      const iconElement = alertElement?.querySelector('.alert-icon');

      if (!alertElement || !messageElement || !iconElement) return;

      messageElement.textContent = message;
      iconElement.textContent = icon;

      alertElement.className = `global-alert ${type}`;
      alertElement.style.display = 'block';

      // Auto-dismiss after 5 seconds for success messages
      if (type === 'success') {
        setTimeout(() => this.dismissAlert(), 5000);
      }
    }

    private dismissAlert() {
      const alertElement = document.getElementById('global-alert');
      if (alertElement) {
        alertElement.style.display = 'none';
      }
    }

    private updateStatus(icon: string, message: string) {
      const iconElement = document.getElementById('status-icon');
      const textElement = document.getElementById('status-text');

      if (iconElement) iconElement.textContent = icon;
      if (textElement) textElement.textContent = message;
    }

    private focusServerUrl() {
      this.serverUrlInput.focus();
    }
  }

  // Initialize connection manager when page loads
  document.addEventListener('DOMContentLoaded', () => {
    new ConnectionManager();
  });
</script>
