{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "types": [
      "vite/client",
      "svelte"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.svelte",
    "src/**/*.astro"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**"
  ]
}
