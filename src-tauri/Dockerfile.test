# Backend Test Dockerfile
FROM rust:latest

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy Cargo files
COPY Cargo.toml Cargo.lock ./

# Cache dependencies
RUN cargo fetch

# Copy source code
COPY src ./src
COPY tauri.conf.json ./

# Default command for running tests
# Tests run as root which is acceptable for CI/CD environments
CMD ["cargo", "test", "--all-features", "--verbose"]