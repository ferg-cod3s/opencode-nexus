{
  "name": "src-tauri",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "cd frontend && bun run build",
    "preview": "vite preview",
    "tauri": "tauri",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "build:ios": "cargo tauri ios build --release",
    "deploy:testflight": "scripts/deploy-testflight.sh",
    "deploy:testflight:quick": "scripts/deploy-testflight.sh --skip-build",
    "release": "npm run version:patch && git add -A && git commit -m \"chore: bump version\" && npm run deploy:testflight"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "astro-eslint-parser": "^1.2.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-svelte": "^3.13.0",
    "svelte-eslint-parser": "^1.4.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
